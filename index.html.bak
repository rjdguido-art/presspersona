          <div class="endcap">
            <div class="endcap-links">
              <a href="#arts">Arts & Culture</a>
              <a href="#case-studies">Stories</a>
            </div>
            <div class="endcap-meta">
              <div class="meta-links">
                <a href="mailto:presspersona@outlook.com">Work with us</a>
                <a href="#">Team</a>
                <a href="#">Careers</a>
                <a href="#">Press</a>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>© <span id="year"></span> PressPersona.</p>
        <div class="footer-links">
          <a href="#">Privacy</a>
          <a href="#">Terms</a>
          <a href="mailto:presspersona@outlook.com">presspersona@outlook.com</a>
        </div>
